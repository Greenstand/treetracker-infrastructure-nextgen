
# You should look at the following URL's in order to grasp a solid understanding
# of Nginx configuration files in order to fully unleash the power of Nginx.
# http://wiki.nginx.org/Pitfalls
# http://wiki.nginx.org/QuickStart
# http://wiki.nginx.org/Configuration
#
# Generally, you will want to move this file somewhere, and start with a clean
# file but keep this around for reference. Or just disable in sites-enabled.
#
# Please see /usr/share/doc/nginx-doc/examples/ for more detailed examples.
##

# Default server configuration
#

log_format postdata $request_body;

server {
    server_name treetracker.org; 

	root /var/www/html;

	# Add index.php to the list if you are using PHP
  index index.html index.htm index.nginx-debian.html;

    set $httpc  "http://";
    set $ip "127.0.0.1";
    set $lc "127.0.0.1";

	location ^~ /api/web {
		rewrite ^/api/web/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}${lc}:3000${uri}";
	}

	location ^~ /api/mobile {
		rewrite ^/api/mobile/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}${lc}:3001${uri}";
	}


	location ^~ /api/token {
		rewrite ^/api/token/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}10.136.214.96:3006${uri}";
	}


  location ~ /@.* {
    rewrite ^/@(.*)$ / last;
  }

 	location / {
        autoindex off;
	}

  listen [::]:443 ssl ipv6only=on; # managed by Certbot
  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/treetracker.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/treetracker.org/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    server_name ready.treetracker.org; 

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

  set $httpc  "http://";
  set $ip "127.0.0.1";
  set $lc "127.0.0.1";

	location ^~ /api/web {
		rewrite ^/api/web/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}${lc}:3000${uri}";
	}

	location ^~ /api/mobile {
		rewrite ^/api/mobile/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}${lc}:3001${uri}";
	}


	location ^~ /api/token {
		rewrite ^/api/token/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}10.136.214.96:3006${uri}";
	}


  location ~ /@.* {
    rewrite ^/@(.*)$ / last;
  }

 	location / {
    autoindex off;
	}


  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/ready.treetracker.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/ready.treetracker.org/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
	listen 443 ssl;

  server_name admin.treetracker.org; 
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/admin.treetracker.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/admin.treetracker.org/privkey.pem; # managed by Certbot

	root /var/www/admin/;

  set $httpc  "http://";
  set $ip "127.0.0.1";
  set $lc "127.0.0.1";


	location ^~ /api/admin {
		rewrite ^/api/admin/(.*)$ /$1$is_args$args; break;
		proxy_pass "${httpc}${lc}:3002${uri}";
    proxy_set_header        X-Real-IP       $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
	}

  location  / {
    alias /var/www/admin/;
    autoindex off;
  }

}

server {
  if ($host = treetracker.org) {
    return 301 https://$host$request_uri;
  } # managed by Certbot

  listen 80 default_server;
  listen [::]:80 default_server;

  server_name treetracker.org;

  return 204;

}



server {
  if ($host = www.treetracker.org) {
        return 301 https://$host$request_uri;
  } # managed by Certbot


  listen 80;
  listen [::]:80;

  server_name www.treetracker.org;

  return 204;
}


