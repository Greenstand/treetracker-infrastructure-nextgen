        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name wallet.treetracker.org;

    return 204;

}


server {
    if ($host = ready.treetracker.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name ready.treetracker.org;
    listen 80;
    return 404; # managed by Certbot

}
